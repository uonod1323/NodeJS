<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <title>게시판</title>
  </head>
  <body>
    <h4 class="ml-3 my-3">게시판</h4>

    <ul class="list-group">
        <% for(var i=0; i<oldgame.length; i++){ %>
          <li class="list-group-item">
            <h4>할일 제목 : <%= oldgame[i].title %></h4>
            <p>할일 마감날짜 : <%= oldgame[i].content %></p>
            <button type="button" data-id="<%= oldgame[i]._id %>" class="btn btn-danger delete">삭제</button>
          </li>
        <% } %>       
    </ul>
  
    <div class="container">
      <div class="row">
        <div class="col-12">
          <h1>List Group</h1>
          <ul class="list-group">
            <% for(var i=0; i<oldgame.length; i++){ %>
              <li class="list-group-item"><%=oldgame[i].title%></li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>

    <button type="button" class="btn btn-primary" id="writebtn">작성하기</button>

    <script>
      $('#writebtn').click(function(e){
        location.href = '/board/sub/oldgame/write';
      });

    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
  </body>
</html>